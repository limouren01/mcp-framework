# 数据库连接配置
DB_HOST=localhost #数据库地址
DB_USER=root #数据库有货吗
DB_PASSWORD=passwd #数据库密码
DB_NAME=programs #数据库的数据库名
DB_PORT=3306 #数据库端口 （目前示例使用的为mysql数据库，3306为默认端口）

# MCP 服务端配置
MCP_ALLOWWRITE="false" #true/false 是否允许写入
MCP_ROOTDIR="mcp根目录位置"

# MySQL 特定的环境变量（如果需要）
MYSQL_HOST=${DB_HOST}
MYSQL_USER=${DB_USER}
MYSQL_PASSWORD=${DB_PASSWORD}
MYSQL_DATABASE=${DB_NAME}
MYSQL_PORT=${DB_PORT}

